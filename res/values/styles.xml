<resources>
    <style name="StyledIndicators" parent="Theme.Myactionbar">
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTitlePageIndicator">
        <!--<item name="android:background">#18FF0000</item>-->
        <item name="footerColor">@color/main_color</item>
        <item name="footerLineHeight">1dp</item>
        <!--<item name="footerIndicatorHeight">3dp</item>-->
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="selectedColor">@android:color/primary_text_light</item>
        <item name="selectedBold">true</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator_ab_myactionbar</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <!--<item name="android:typeface">monospace</item>-->
    </style>


    <style name="ContentContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CategoryItemPanel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="CategoryItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CategoryItem.Caption">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CategoryItem.Caption.WhatsNew">
        <item name="android:text">@string/whats_new_caption</item>
    </style>

    <style name="CategoryItem.Caption.Cinemas">
        <item name="android:text">@string/cinemas_caption</item>
    </style>

    <style name="CategoryItem.Caption.Movies">
        <item name="android:text">@string/movies_caption</item>
    </style>

    <style name="CategoryItem.Caption.Actors">
        <item name="android:text">@string/actors_caption</item>
    </style>

    <style name="CategoryItem.Caption.Genres">
        <item name="android:text">@string/genres_caption</item>
    </style>

    <style name="Grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:numColumns">1</item>
    </style>

    <style name="Grid.Cinemas"/>
    <style name="Grid.Movies"/>
    <style name="Grid.Actors"/>
    <style name="Grid.Genres"/>

    <style name="List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">1px</item>
        <!--<item name="android:cacheColorHint">#FFFFFF</item>-->
        <!--<item name="android:cacheColorHint">#000033</item>-->
    </style>

    <style name="List.Cinemas"/>
    <style name="List.Movies"/>
    <style name="List.Cities">
        <item name="android:divider">@drawable/cinema_data_divider</item>
    </style>
    <style name="List.Actors"/>
    <style name="List.Genres"/>
    <style name="List.Search"/>

    <style name="ListCaption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="ListCaption.Cinema">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListCaption.Movie"/>
    <style name="ListCaption.Actor"/>
    <style name="ListCaption.Genre"/>


    <style name="ListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItem.Caption">
        <item name="android:textColor">#333333</item>
        <!--<item name="android:textColor">#242424</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItem.Caption.Cinema"/>
    <style name="ListItem.Caption.Movie"/>
    <style name="ListItem.Caption.Actor"/>
    <style name="ListItem.Caption.Genre"/>
    <style name="ListItem.Caption.City">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ListItem.Data">
        <item name="android:textColor">#404040</item>
    </style>

    <style name="ListItem.Data.CinemaAddress"/>
    <style name="ListItem.Data.CinemaDistance">
        <!--<item name="android:textColor">#FF6899FF</item>-->
        <item name="android:textColor">@color/advanced_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListItem.Data.CinemaSchedule">
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">#FF4E00</item>
    </style>
    <style name="ListItem.Data.MovieGenre"/>
    <style name="ListItem.Data.ImdbRating">
        <item name="android:textColor">@color/advanced_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListItem.Data.KpRating">
        <item name="android:textColor">@color/kp_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListItem.Data.MovieSchedule">
        <item name="android:textColor">#FF4E00</item>
    </style>
    <!-- 0094FF -->
    <style name="ListItem.Data.MovieTimeLeft">
        <item name="android:textColor">@color/advanced_color</item>
    </style>
    <style name="ListItem.Data.MovieActor">
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">#FF0000</item>
    </style>
    <style name="ListItem.Data.MovieOnlyTomorrow"/>

    <style name="MovieInfoRegion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="MovieInfoContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>