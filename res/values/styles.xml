<resources>
    <style name="Background">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#FFFFFF</item>
        <!--<item name="android:background">#000033</item>-->
    </style>

    <style name="Background.Caption">
        <item name="android:background">#000000</item>
    </style>

    <style name="ActivityTitleBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="ActivityTitleBarArrow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ActivityTitleBarArrow.Left">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:src">@drawable/ic_arrow_left</item>
    </style>

    <style name="ActivityTitleBarArrow.Right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>

    <style name="ActivityTitleBarHome">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:src">@drawable/ic_home</item>
    </style>

    <style name="ActivityTitleBarDay">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:src">@drawable/ic_day</item>
    </style>

    <style name="ActivityTitleBarShare">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:src">@drawable/ic_share</item>
    </style>

    <style name="ActivityTitleText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CategoryItemPanel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="CategoryItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CategoryItem.Caption">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CategoryItem.Caption.WhatsNew">
        <item name="android:text">@string/whats_new_caption</item>
    </style>

    <style name="CategoryItem.Caption.Cinemas">
        <item name="android:text">@string/cinemas_caption</item>
    </style>

    <style name="CategoryItem.Caption.Movies">
        <item name="android:text">@string/movies_caption</item>
    </style>

    <style name="CategoryItem.Caption.Actors">
        <item name="android:text">@string/actors_caption</item>
    </style>

    <style name="CategoryItem.Caption.Genres">
        <item name="android:text">@string/genres_caption</item>
    </style>

    <style name="CategoryItem.Image">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="CategoryItem.Image.WhatsNew">
        <item name="android:src">@drawable/ic_whats_new</item>
    </style>

    <style name="CategoryItem.Image.Cinemas">
        <item name="android:src">@drawable/ic_place</item>
    </style>

    <style name="CategoryItem.Image.Movies">
        <item name="android:src">@drawable/ic_movies</item>
    </style>

    <style name="CategoryItem.Image.Actors">
        <item name="android:src">@drawable/ic_actors</item>
    </style>

    <style name="CategoryItem.Image.Genres">
        <item name="android:src">@drawable/ic_genres</item>
    </style>


    <style name="List">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:cacheColorHint">#FFFFFF</item>
        <!--<item name="android:cacheColorHint">#000033</item>-->
    </style>

    <style name="List.Cinemas"/>
    <style name="List.Movies"/>
    <style name="List.Cities">
        <item name="android:divider">@drawable/cinema_data_divider</item>
    </style>
    <style name="List.Actors"/>
    <style name="List.Genres"/>

    <style name="ListCaption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="ListCaption.Cinema"/>
    <style name="ListCaption.Movie"/>
    <style name="ListCaption.Actor"/>
    <style name="ListCaption.Genre"/>


    <style name="ListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItem.Caption">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ListItem.Caption.Cinema"/>
    <style name="ListItem.Caption.Movie"/>
    <style name="ListItem.Caption.Actor"/>
    <style name="ListItem.Caption.Genre">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="ListItem.Caption.City">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ListItem.Data">
        <item name="android:textColor">#404040</item>
    </style>

    <style name="ListItem.Data.CinemaAddress"/>
    <style name="ListItem.Data.CinemaDistance">
        <item name="android:textColor">#00137F</item>
    </style>
    <style name="ListItem.Data.CinemaSchedule">
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">#FF4E00</item>
    </style>
    <style name="ListItem.Data.MovieGenre"/>
    <style name="ListItem.Data.MovieRating">
        <item name="android:textColor">#00137F</item>
    </style>
    <style name="ListItem.Data.MovieRatingValue">
        <item name="android:textColor">#00137F</item>
    </style>
    <style name="ListItem.Data.MovieSchedule">
        <item name="android:textColor">#FF4E00</item>
    </style>
    <!-- 0094FF -->
    <style name="ListItem.Data.MovieTimeLeft"/>
    <style name="ListItem.Data.MovieActor">
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">#FF0000</item>
    </style>
    <style name="ListItem.Data.MovieOnlyTomorrow"/>

</resources>