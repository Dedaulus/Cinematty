<resources>
    <style name="Background">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#2B2B2B</item>
    </style>

    <style name="List">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:cacheColorHint">#2B2B2B</item>
    </style>

    <style name="List.Cinemas"/>
    <style name="List.Movies"/>
    <style name="List.Cities">
        <item name="android:divider">@drawable/cinema_data_divider</item>
    </style>
    <style name="List.Actors"/>
    <style name="List.Genres"/>

    <style name="ListCaption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">#FF6A00</item>
    </style>

    <style name="ListCaption.Movie"/>
    <style name="ListCaption.Cinema">
        <item name="android:layout_width">wrap_content</item>
    </style>


    <style name="ListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItem.Caption">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ListItem.Caption.Cinema"/>
    <style name="ListItem.Caption.Movie"/>
    <style name="ListItem.Caption.Actor"/>
    <style name="ListItem.Caption.Genre">
        <item name="android:textSize">22dp</item>
    </style>
    <style name="ListItem.Caption.City">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="ListItem.Data">
        <item name="android:textColor">#c0c0c0</item>
    </style>

    <style name="ListItem.Data.CinemaAddress"/>
    <style name="ListItem.Data.CinemaSchedule">
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">#FF6A00</item>
    </style>
    <style name="ListItem.Data.MovieGenre"/>
    <style name="ListItem.Data.MovieSchedule">
        <item name="android:textColor">#FF6A00</item>
    </style>
    <!-- 0094FF -->
    <style name="ListItem.Data.MovieTimeLeft"/>

</resources>