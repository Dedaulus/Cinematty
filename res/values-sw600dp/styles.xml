<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:numColumns">2</item>
    </style>

    <style name="Grid.Cinemas">
        <item name="android:numColumns">1</item>
    </style>
    <style name="Grid.Movies"/>
    <style name="Grid.Directors"/>
    <style name="Grid.Actors"/>
    <style name="Grid.Genres"/>

    <style name="PosterItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>