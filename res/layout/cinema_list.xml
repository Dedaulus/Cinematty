<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContentContainer">

    <include android:id="@+id/day_indicator"
            layout="@layout/schedule_day_indicator"/>

    <ListView android:id="@+id/cinema_list"
            style="@style/List.Cinemas"
            android:layout_below="@id/day_indicator"/>

    <TextView android:id="@+id/no_schedule"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/unknown_schedule"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="20sp"
            android:visibility="gone"/>

</RelativeLayout>