<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Background.Caption">

    <RelativeLayout
        android:id="@+id/cinema_list_title"
        style="@style/ActivityTitleBar"
        android:visibility="gone">

        <TextView
            android:id="@+id/titlebar_caption"
            style="@style/ActivityTitleText"
            android:text="@string/cinemas_caption"/>

        <ImageView
            android:id="@+id/cinema_list_title_home"
            style="@style/ActivityTitleBarHome"
            android:onClick="onHomeButtonClick"/>

        <ImageView
            android:id="@+id/cinema_list_title_day"
            style="@style/ActivityTitleBarDay"
            android:visibility="gone"
            android:onClick="onDayButtonClick"/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/Background"
        android:layout_below="@id/cinema_list_title">

        <TextView
            android:id="@+id/movie_caption_in_cinema_list"
            style="@style/ListCaption.Movie"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/cinema_list"
            style="@style/List.Cinemas"
            android:layout_below="@id/movie_caption_in_cinema_list"/>

        <TextView
            android:id="@+id/no_schedule"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/unknown_schedule"
            android:textColor="#404040"
            android:textSize="20dp"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>