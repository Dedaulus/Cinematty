<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Background.Caption">

    <RelativeLayout
        android:id="@+id/category_list_title"
        style="@style/ActivityTitleBar">

        <TextView
            style="@style/ActivityTitleText"
            android:text="@string/categories_caption"/>

        <ImageView
            android:id="@+id/category_list_title_arrow_right"
            style="@style/ActivityTitleBarArrow.Right"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/space"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#FFFFFF"
        android:layout_below="@id/category_list_title"/>

    <RelativeLayout
        android:id="@+id/select_city_panel"
        style="@style/ActivityTitleBar"
        android:layout_alignParentTop="false"
        android:layout_below="@id/space"
        android:onClick="onCityClick">

        <TextView
            android:id="@+id/city_caption"
            style="@style/ActivityTitleText"/>

        <ImageView
            style="@style/ActivityTitleBarArrow.Right"/>

    </RelativeLayout>

    <RelativeLayout
        style="@style/Background"
        android:layout_below="@id/select_city_panel">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:onClick="onCinemaClick">

                <ImageView
                    android:id="@+id/cinemas_ico"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_place"/>

                <TextView
                    android:id="@+id/cinemas_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cinemas_ico"
                    android:layout_centerVertical="true"
                    android:paddingLeft="6dp"
                    android:text="@string/cinemas_caption"
                    android:textSize="36dp"
                    android:textColor="#000000"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:onClick="onMoviesClick">

                <ImageView
                    android:id="@+id/movies_ico"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_movies"/>

                <TextView
                    android:id="@+id/movies_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/movies_ico"
                    android:layout_centerVertical="true"
                    android:paddingLeft="6dp"
                    android:text="@string/movies_caption"
                    android:textSize="36dp"
                    android:textColor="#000000"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:onClick="onActorsClick">

                <ImageView
                    android:id="@+id/actors_ico"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_actors"/>

                <TextView
                    android:id="@+id/actors_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/actors_ico"
                    android:layout_centerVertical="true"
                    android:paddingLeft="6dp"
                    android:text="@string/actors_caption"
                    android:textSize="36dp"
                    android:textColor="#000000"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:onClick="onGenresClick">

                <ImageView
                    android:id="@+id/genres_ico"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_genres"/>

                <TextView
                    android:id="@+id/genres_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/genres_ico"
                    android:layout_centerVertical="true"
                    android:paddingLeft="6dp"
                    android:text="@string/genres_caption"
                    android:textSize="36dp"
                    android:textColor="#000000"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>