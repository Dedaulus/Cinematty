<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContentContainer">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/whats_new_panel"
                style="@style/CategoryItemPanel"
                android:layout_marginTop="6dp">

                <TextView
                    style="@style/CategoryItem.Caption.WhatsNew"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cinemas_panel"
                style="@style/CategoryItemPanel"
                android:layout_marginTop="6dp">

                <TextView
                    style="@style/CategoryItem.Caption.Cinemas"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/movies_panel"
                style="@style/CategoryItemPanel"
                android:layout_marginTop="6dp">

                <TextView
                    style="@style/CategoryItem.Caption.Movies"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/actors_panel"
                style="@style/CategoryItemPanel"
                android:layout_marginTop="6dp">

                <TextView
                    style="@style/CategoryItem.Caption.Actors"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/genres_panel"
                style="@style/CategoryItemPanel"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp">

                <TextView
                    style="@style/CategoryItem.Caption.Genres"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
