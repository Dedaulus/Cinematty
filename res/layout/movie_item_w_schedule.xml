<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <TextView
        android:id="@+id/movie_caption_in_movie_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/movie_genre_in_movie_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#404040"
        android:layout_below="@id/movie_caption_in_movie_list"/>

    <TextView
        android:id="@+id/movie_schedule_in_movie_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingRight="4dp"
        android:textColor="#4d67a2"
        android:layout_below="@id/movie_genre_in_movie_list"/>

    <TextView
        android:id="@+id/time_left_in_movie_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#404040"
        android:layout_below="@id/movie_schedule_in_movie_list"
        android:layout_alignParentRight="true"/>

</RelativeLayout>