<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:padding="6dp">

    <LinearLayout
        android:id="@+id/movie_list_icon_panel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <RelativeLayout
            android:id="@+id/movie_list_icon_loading"
            android:layout_height="62dp"
            android:layout_width="62dp"
            android:paddingRight="6dp">

            <ProgressBar
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 style="@android:style/Widget.ProgressBar.Small.Inverse"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/movie_list_icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingRight="6dp"
            android:adjustViewBounds="true"
            android:maxWidth="62dp"
            android:src="@drawable/ic_blank_movie"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/movie_list_icon_panel"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/movie_caption_in_movie_list"
            style="@style/ListItem.Caption.Movie"/>

        <TextView
            android:id="@+id/movie_genre_in_movie_list"
            style="@style/ListItem.Data.MovieGenre"
            android:layout_below="@id/movie_caption_in_movie_list"/>

    </RelativeLayout>

</RelativeLayout>