<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Background"
    android:padding="6dp">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:onClick="onCityClick">

        <ImageView
            android:id="@+id/select_city_ico"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/circle_arrow"/>

        <TextView
            android:id="@+id/city_caption"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/select_city_ico"
            android:paddingRight="6dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#FF6A00"
            android:textSize="26dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingBottom="10dp"
            android:onClick="onCinemaClick">

            <ImageView
                android:id="@+id/cinemas_ico"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_place"/>

            <TextView
                android:id="@+id/cinemas_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cinemas_ico"
                android:layout_centerVertical="true"
                android:paddingLeft="6dp"
                android:text="@string/cinemas_caption"
                android:textSize="36dp"
                android:textColor="#ffffff"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingBottom="10dp"
            android:onClick="onMoviesClick">

            <ImageView
                android:id="@+id/movies_ico"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_movies"/>

            <TextView
                android:id="@+id/movies_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/movies_ico"
                android:layout_centerVertical="true"
                android:paddingLeft="6dp"
                android:text="@string/movies_caption"
                android:textSize="36dp"
                android:textColor="#ffffff"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingBottom="10dp"
            android:onClick="onActorsClick">

            <ImageView
                android:id="@+id/actors_ico"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_actors"/>

            <TextView
                android:id="@+id/actors_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/actors_ico"
                android:layout_centerVertical="true"
                android:paddingLeft="6dp"
                android:text="@string/actors_caption"
                android:textSize="36dp"
                android:textColor="#ffffff"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingBottom="10dp"
            android:onClick="onGenresClick">

            <ImageView
                android:id="@+id/genres_ico"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_genres"/>

            <TextView
                android:id="@+id/genres_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/genres_ico"
                android:layout_centerVertical="true"
                android:paddingLeft="6dp"
                android:text="@string/genres_caption"
                android:textSize="36dp"
                android:textColor="#ffffff"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
