<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Background.Caption">

    <RelativeLayout
        android:id="@+id/movie_list_title"
        style="@style/ActivityTitleBar"
        android:visibility="gone">

        <TextView
            android:id="@+id/titlebar_caption"
            style="@style/ActivityTitleText"
            android:text="@string/movies_caption"/>

        <ImageView
            android:id="@+id/movie_list_title_home"
            style="@style/ActivityTitleBarHome"
            android:onClick="onHomeButtonClick"/>

        <ImageView
            android:id="@+id/movie_list_title_day"
            style="@style/ActivityTitleBarDay"
            android:visibility="gone"
            android:onClick="onDayButtonClick"/>

    </RelativeLayout>

    <RelativeLayout
        style="@style/Background"
        android:layout_below="@id/movie_list_title">

        <RelativeLayout
            android:id="@+id/cinema_panel_in_movie_list"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/cinema_caption_in_movie_list"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/select_cinema_ico"
                style="@style/ListCaption.Cinema"/>

        </RelativeLayout>

        <ListView
            android:id="@+id/movie_list"
            android:layout_below="@id/cinema_panel_in_movie_list"
            style="@style/List.Movies"/>

        <TextView
            android:id="@+id/no_schedule"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/no_schedule"
            android:textColor="#404040"
            android:textSize="20dp"
            android:paddingBottom="150dp"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>