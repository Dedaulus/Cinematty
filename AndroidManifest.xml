<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.dedaulus.cinematty"
      android:versionCode="4"
      android:versionName="0.99.3">
    <application android:name="CinemattyApplication" android:label="@string/app_name" android:icon="@drawable/icon">

        <activity
            android:name=".activities.StartupActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CinemaListActivity"
            android:label="Кинотеатры"
            android:theme="@android:style/Theme.NoTitleBar"/>

        <activity
            android:name=".activities.MovieListActivity"
            android:label="Фильмы"
            android:theme="@android:style/Theme.NoTitleBar"/>

        <activity
            android:name=".activities.MovieActivity"
            android:label="Фильм"
            android:theme="@android:style/Theme.NoTitleBar"/>

        <activity
            android:name=".activities.ActorListActivity"
            android:label="Актёры"
            android:theme="@android:style/Theme.NoTitleBar"/>

        <activity
            android:name=".activities.GenreListActivity"
            android:label="Жанры"
            android:theme="@android:style/Theme.NoTitleBar"/>

        <activity
            android:name=".activities.CinemaActivity"
            android:label="Кинотеатр"
            android:theme="@android:style/Theme.NoTitleBar"/>

        <activity
            android:name=".activities.MainActivity"
            android:label="ГдеКИНО"
            android:theme="@android:style/Theme.NoTitleBar"
            android:launchMode="singleTask"/>

        <activity
            android:name=".activities.CityListActivity"
            android:label="Города"
            android:theme="@android:style/Theme.NoTitleBar"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8"/>

</manifest> 
