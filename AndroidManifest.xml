<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.dedaulus.cinematty"
      android:installLocation="auto"
      android:versionCode="16"
      android:versionName="@string/app_version">

    <application
        android:name="CinemattyApplication"
        android:label="@string/app_name"
        android:icon="@drawable/icon"
        android:theme="@style/Theme.Sherlock">

        <activity
            android:name=".activities.StartupActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/StyledIndicators"
            android:launchMode="singleTask"/>

        <activity
            android:name=".activities.CinemaWithScheduleListActivity"/>

        <activity
            android:name=".activities.MovieListActivity"/>

        <activity
            android:name=".activities.MovieWithScheduleListActivity"/>

        <activity
            android:name=".activities.MovieActivity"/>

        <activity
            android:name=".activities.ActorListActivity"/>

        <activity
            android:name=".activities.GenreListActivity"/>

        <activity
            android:name=".activities.CityListActivity"/>

        <activity
            android:name=".activities.AboutActivity"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15"/>

</manifest> 
